  PAPERLESS_TOKEN=<paperless_API TOKEN>
  NC_USER=<nextcloud__USER>
  NC_PASS=<nextcloud_APPPASSWORD>
  BASE_NC_URL="https://<nextcloud_URL>/remote.php/dav/files/<nextcloud_USER>/"
  PAPERLESS_URL="https://<paperless.myserver.com>"
# Paperless API endpoint (include http/https and port if needed)
PAPERLESS_URL=http://paperless-ngx:8000

# Paperless API token
PAPERLESS_TOKEN=changeme

# Nextcloud WebDAV base URL
# Example for personal account:
#   https://cloud.example.com/remote.php/dav/files/<username>/
# Example for groupfolders:
#   https://cloud.example.com/remote.php/dav/groupfolders/<id>/
BASE_NC_URL=https://cloud.example.com/remote.php/dav/files/username/

# Nextcloud credentials
NC_USER=changeme
NC_PASS=changeme

# Optional overrides
CONTAINER=paperless-ngx
ROUTING=/state/routing.json
